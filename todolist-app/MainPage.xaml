<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todolist_app.MainPage"
             Title="Todolist">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Notifications"
                 
                 Order="Primary"
                 Priority="0" />
        <ToolbarItem Text="Settings"
                 
                 Order="Primary"
                 Priority="0" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="Good Morning" FontSize="26" TextColor="Black" Margin="15" FontAttributes="Bold">
        </Label>
        <Frame BackgroundColor="White" HeightRequest="50" WidthRequest="30" HasShadow="True" Margin="20"
               HorizontalOptions="CenterAndExpand" BorderColor="LightGray" CornerRadius="5" >
            <StackLayout>
                <Label Text="Sat" HorizontalOptions="CenterAndExpand" />
                <Label Text="14" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>
