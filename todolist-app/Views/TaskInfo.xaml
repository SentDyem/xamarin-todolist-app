<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todolist_app.Views.TaskInfo"
             Shell.NavBarIsVisible="False"
             xmlns:fontAwesome="clr-namespace:FontAwesome">
    <ContentPage.Content>
        <StackLayout>
            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition  Width="0.7*"/>
                    <ColumnDefinition Width="0.1*" />
                </Grid.ColumnDefinitions>
                <BoxView/>
                <Button FontFamily ="FAS" Text="{x:Static fontAwesome:FontAwesomeIcons.AngleLeft}" FontSize ="Medium" WidthRequest="60" HeightRequest="60" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" BackgroundColor="Transparent" Clicked="DownButton_Clicked"></Button>
                <BoxView Grid.Column="1"/>
                <Label Grid.Column="1" Text="Задача на сегодня" FontSize="26" TextColor="Black" Margin="15"  FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="CenterAndExpand">
                </Label>
                <BoxView Grid.Column="2"/>
                <Button Grid.Column ="2" FontFamily="FAS" Text="{x:Static fontAwesome:FontAwesomeIcons.ShareNodes}" FontSize ="Medium" WidthRequest="60" HeightRequest="60" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" BackgroundColor="Transparent" Clicked="ShareButton_ClickedAsync"></Button>
            </Grid>
            <Grid Padding="10" RowDefinitions ="Auto, 100" ColumnDefinitions ="150, 50, 25, *">
                <BoxView Grid.Row="0" Grid.ColumnSpan="4"/>
                <Editor Grid.Row ="0" Grid.ColumnSpan="4" Placeholder="Введите текст" Text="{Binding Content}" HeightRequest="350"/>
                <Button Grid.Row="1" BackgroundColor="LightGreen" WidthRequest="50" Text="Сохранить" TextColor="White" Margin="30" CornerRadius="10" Clicked="OnSaveButton_Clicked"/>
                <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="Red" />
                <Button Grid.Row="1" Grid.Column="2" BackgroundColor="PaleVioletRed" WidthRequest="50" Text="Удалить" TextColor="White" Margin="30" CornerRadius="10" Clicked="OnDeleteButton_Clicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>